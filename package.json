{
	"name": "ts-boiler",
	"version": "1.0.0",
	"description": "Boilerplate for simple backend services in TypeScript",
	"author": "repetitioestmaterstudiorum",
	"license": "MIT",
	"scripts": {
		"dev": "nodemon -r dotenv/config src/index.ts",
		"test": "npm run lint-tsc && jest",
		"test:watch": "npm run lint-tsc && jest --watchAll",
		"ts-node": "ts-node",
		"start": "pm2 start build/main.js --no-daemon",
		"build": "npm run lint-tsc && rimraf build/ && npm run make-bundle",
		"make-bundle": "esbuild src --bundle --platform=node --minify --sourcemap=external --outfile=build/main.js",
		"lint-tsc": "eslint src/**/*.ts && tsc -p tsconfig.json"
	},
	"devDependencies": {
		"@types/jest": "^27.5.1",
		"@types/node": "^17.0.18",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"dotenv": "^16.0.1",
		"esbuild": "^0.14.41",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"eslint-plugin-jest": "^26.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^28.1.0",
		"nodemon": "^2.0.15",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^28.0.3",
		"ts-node": "^10.7.0",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"pm2": "^5.2.0"
	}
}
